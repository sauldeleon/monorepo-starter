{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@myscope/common": ["../common/src"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@containers": ["src/containers"],
      "@containers/*": ["src/containers/*"],
      "@mocks/*": ["src/mocks/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@redux/*": ["src/app/*"]
    }
  }
}
